<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingEnd="20sp"
    android:paddingBottom="15sp"
    android:paddingStart="20sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/add_note"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="@string/name"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/noteNameAddNote"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:inputType="text"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/noteDescAddNote"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="@string/description"
        android:layout_marginTop="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="@+id/noteNameAddNote"
        app:layout_constraintStart_toStartOf="@+id/noteNameAddNote"
        app:layout_constraintTop_toBottomOf="@+id/noteNameAddNote"
        android:importantForAutofill="no"
        android:inputType="text" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createNote"
        android:layout_width="150dp"
        android:layout_height="50sp"
        android:layout_marginTop="16dp"
        android:text="@string/add"
        app:layout_constraintEnd_toEndOf="@+id/noteDescAddNote"
        app:layout_constraintStart_toStartOf="@+id/noteDescAddNote"
        app:layout_constraintTop_toBottomOf="@+id/noteDescAddNote" />

</androidx.constraintlayout.widget.ConstraintLayout>